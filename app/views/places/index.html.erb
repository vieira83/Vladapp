<h1>Welcome to my Awesome WebApp</h1>
<%= will_paginate @pages %>
<% @places.each do |place| %>
  <div class="nice-box col-xs-10 col-xs-offset-1">
    <h1 class="h1_list"><%= place.name %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />
    

<% if place.user.present? %> 
	<small><%= place.user.email %>
</small> 
<% end %>
  </div>
  <hr />
<% end %>
<%= will_paginate @pages %>